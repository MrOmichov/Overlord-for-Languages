<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<VBox spacing="15.0" alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:id="container">
    <HBox>
        <padding><Insets top="15.0" left="15.0" right="15.0"/></padding>
        <TextField promptText="newFile">
            <HBox.hgrow>ALWAYS</HBox.hgrow>
        </TextField>
        <Button text="Directory" HBox.hgrow="ALWAYS" onAction="#onChooseDirectoryButtonClick">
            <HBox.hgrow>ALWAYS</HBox.hgrow>
        </Button>
    </HBox>
    <GridPane hgap="15.0">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <Button text="Create" HBox.hgrow="ALWAYS" fx:id="create">
            <GridPane.valignment>top</GridPane.valignment>
            <GridPane.halignment>center</GridPane.halignment>
            <GridPane.columnIndex>0</GridPane.columnIndex>
            <GridPane.rowIndex>0</GridPane.rowIndex>
        </Button>
        <Button text="Cancel" HBox.hgrow="ALWAYS" fx:id="cancel" onAction="#onCancelButtonClick">
            <GridPane.valignment>top</GridPane.valignment>
            <GridPane.halignment>center</GridPane.halignment>
            <GridPane.columnIndex>1</GridPane.columnIndex>
            <GridPane.rowIndex>0</GridPane.rowIndex>
        </Button>
    </GridPane>
</VBox>